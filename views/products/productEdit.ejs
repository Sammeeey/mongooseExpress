<%- include('../partials/head') %>

<!DOCTYPE html>
<html lang="en">

<body>
    <%- include('../partials/nav') %>

    <h1>Product <%= product.name %></h1>

    <form action="/products/<%= product._id %>?_method=PATCH" method="post">
        <input type="text" name="name" id="name" value="<%= product.name %>">
        <input type="number" step="0.01" name="price" id="price" value="<%= product.price %>">
        <select name="category" id="category">
            <% for (let schemaCategory of schemaCategories) { %>
                <% if (product.category.includes(schemaCategory)) { %>
                    <option value="<%= schemaCategory %>" selected><%= schemaCategory %></option>
                <% } else { %>
                    <option value="<%= schemaCategory %>"><%= schemaCategory %></option>
                <% } %>
            <% } %>
        </select>
        <button type="submit">Save Changes</button>    
    </form>

</body>
<% include('../partials/footer') %>

</html>